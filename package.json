{
  "name": "wish-ui",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:docs": "turbo run build --filter=@wish-ui/docs...",
    "dev:docs": "pnpm run build:libs && turbo run dev --filter=@wish-ui/docs",
    "build:libs": "turbo run build --filter=./packages/*",
    "dev:core": "turbo run build --filter=@wish-ui/core^... && turbo run dev --filter=@wish-ui/core",
    "storybook": "turbo run build --filter=@wish-ui/core^... && turbo run storybook",
    "clean": "turbo run clean && rimraf node_modules",
    "format": "prettier -w **/*.{js,ts,json,css,tsx,jsx,md,html}",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "new-package": "tsx ./scripts/new-package.ts",
    "update-deps": "taze -w -r -I",
    "changeset": "changeset",
    "ci:version": "changeset version",
    "ci:publish": "pnpm run build:libs && pnpm publish -r -no-git-checks"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.11.19",
    "eslint": "^8.33.0",
    "eslint-config-wish": "workspace:*",
    "fs-extra": "^11.1.0",
    "prettier": "latest",
    "rimraf": "^3.0.2",
    "taze": "^0.8.5",
    "tsx": "^3.12.3",
    "turbo": "latest",
    "typescript": "^4.9.5"
  },
  "packageManager": "pnpm@7.24.3",
  "engines": {
    "node": ">=16.0.0"
  }
}
