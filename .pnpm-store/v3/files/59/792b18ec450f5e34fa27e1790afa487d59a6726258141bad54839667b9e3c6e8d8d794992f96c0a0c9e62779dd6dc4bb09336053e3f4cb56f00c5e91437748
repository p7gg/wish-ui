exports.Children = (props) => {
  const resolved = solidJs.children(() => props.children);
  solidJs.createComputed(solidJs.on(resolved, props.get));
  solidJs.onCleanup(() => props.get(void 0));
  return resolved;
};
exports.Refs = (props) => {
  const resolved = solidJs.children(() => props.children);
  if (props.added || props.removed || props.onChange) {
    const [elements2, added, removed] = refs(resolved);
    const emit = (refs2, added2, removed2) => solidJs.untrack(() => {
      props.refs?.(refs2);
      props.added?.(added2);
      props.removed?.(removed2);
      props.onChange?.({ refs: refs2, added: added2, removed: removed2 });
    });
    solidJs.createComputed(() => emit(elements2(), added(), removed()));
    solidJs.onCleanup(() => emit([], [], elements2()));
  } else if (props.refs) {
    const cb = props.refs;
    const refs2 = elements(resolved);
    solidJs.createComputed(() => cb(refs2()));
    solidJs.onCleanup(() => cb([]));
  }
  return resolved;
};
exports.Ref = (props) => {
  const resolved = solidJs.children(() => props.children);
  let prev;
  solidJs.createComputed(() => {
    const el = (() => {
      let el2 = utils.access(resolved());
      if (!(el2 instanceof Element))
        el2 = void 0;
      return el2;
    })();
    solidJs.untrack(() => {
      props.ref?.(el);
      if (el && prev !== el)
        solidJs.onMount(() => props.onMount?.(el));
      if (prev && prev !== el && props.onUnmount)
        props.onUnmount(prev);
    });
    prev = el;
  });
  solidJs.onCleanup(() => {
    if (prev) {
      props.ref?.(void 0);
      props.onUnmount?.(prev);
    }
  });
  return resolved;
};

exports.elements = elements;
